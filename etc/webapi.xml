<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">


    <route url="/V1/postcode/search" method="POST">
        <service class="TheITNerd\Brasil\Api\PostcodeSearchInterface" method="searchPostcode"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/address/search" method="POST">
        <service class="TheITNerd\Brasil\Api\PostcodeSearchInterface" method="searchAddress"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
